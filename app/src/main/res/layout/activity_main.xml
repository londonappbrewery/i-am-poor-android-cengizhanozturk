<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.londonappbrewery.iampoor.MainActivity">

    <TextView
        android:id="@+id/txtTitlePoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/app_name"
        android:textColor="@color/colorBlack"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgCharcoal1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/txtTitlePoor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/coal" />

    <ImageView
        android:id="@+id/imgCharcoal2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imgCharcoal1"
        android:layout_toLeftOf="@+id/imgCharcoal1"
        android:layout_toStartOf="@+id/imgCharcoal1"
        app:srcCompat="@drawable/coal" />

    <ImageView
        android:id="@+id/imgCharcoal3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imgCharcoal2"
        android:layout_toEndOf="@+id/imgCharcoal1"
        android:layout_toRightOf="@+id/imgCharcoal1"
        app:srcCompat="@drawable/coal" />

    <ImageView
        android:id="@+id/imgCharcoal4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imgCharcoal2"
        android:layout_toEndOf="@+id/imgCharcoal2"
        android:layout_toRightOf="@+id/imgCharcoal2"
        app:srcCompat="@drawable/coal" />
</RelativeLayout>
